{
    "name": "超级工具箱",
    "description" : "我的浏览器超级工具集",
    "version": "1.1.1",
    "manifest_version": 2,
    "browser_action": {
      "default_popup": "html/menu.html"
    },
   "commands": {
      "_execute_browser_action": {
        "suggested_key": {
          "default": "Ctrl+Shift+F",
          "mac": "MacCtrl+Shift+F"
        },
        "description": "Opens menu.html"
      }
    },
    "permissions": [
      "tabs",
      "contextMenus",
      "storage",
      "http://*/*",
      "https://*/*"
    ],
    "content_scripts": [
      {
        "matches": [
          "http://*/*",
          "https://*/*"
        ],
        "js": [
          "js/contentscript.js"
        ],
        "run_at": "document_end",
        "all_frames": false
      }
    ],
    "icons": {
        "16": "imgs/icon_16.png",
        "48": "imgs/icon_48.png",
        "128": "imgs/icon_128.png"
    },
    "background": {
      "scripts": ["js/background.js"]
    }
}